[core]
    # Use $GIT_EDITOR instead
    #editor = vim -f
    pager = ~/bin/dif
    excludesFile = ~/git-config/gitignore
    #attributesFile = ~/git-config/gitattributes
    fileMode = false

[color]
    branch = true
    interactive = auto
    status = auto
    diff = auto
    ui = auto
    pager = true

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[color "diff"]
    meta = yellow
    frag = magenta bold
    commit = yellow bold
    old = red bold
    new = green bold
    whitespace = red reverse

[diff-so-fancy]
    first-run = false

[clone]
    recurse-submodules = true

[fetch]
    prune = true

[push]
    default = tracking

[apply]
    whitespace = fix

[diff]
    #tool = kdiff3

[http]
    cookiefile = ~/git-config/gitcookies

[include]
    file = ~/git-config/git-filters

[alias]
    # lots stolen from https://git.wiki.kernel.org/index.php/Aliases
    # and https://gist.github.com/992097

    fa = fetch --all

    #diff
    cdiff = diff --cached
    vdiff = !git diff ${1+"$@"} | vless
    vcdiff = !git diff --cached ${1+"$@"} | vless

    changes= diff --name-status -r

    # log
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    lc = log ORIG_HEAD.. --stat --no-merges
    l = log --pretty=format:\"%h %ad | %s%Cgreen%d%Creset [%Cblue%an%Creset]\" --date=short --graph

    graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"

    # push
    sp = safepush

    # commit
    ci = commit
    amend = commit --amend

    # checkout
    switch = checkout
    co = checkout
    cob = checkout -b
    revert-file = checkout HEAD --

    # reset
    undo = reset --hard
    clear = reset --hard HEAD
    undo-commit = reset --soft HEAD~1
    unstage = reset HEAD --
    wipe = clean -df

    # gitk
    gitkconflict = !gitk --left-right HEAD...MERGE_HEAD
    k = !gitk

    # misc
    serve = daemon --reuseaddr --verbose  --base-path=. --export-all ./.git
    prune-all = !git remote | xargs -n 1 git remote prune
    whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"
    whatis = show -s --pretty='tformat:%h (%s, %ad)' --date=short
    alias = !git config --get-regexp 'alias.*' | colrm 1 6 | sed 's/[ ]/ = /'
    pick = cherry-pick
    archeology = blame -w -C -n
    mergefeature = merge --no-ff
    human = name-rev --name-only --refs=refs/heads/*

    tags = tag -l
    remotes = remote -v
    branches = branch -v
    refs = for-each-ref

    st = status -uno
    s = status -uno --short

    ff = merge --ff-only
    squash = merge --squash

    # Use 'main' instead of 'master' for new projects
    new = !git init && git symbolic-ref HEAD refs/heads/main
